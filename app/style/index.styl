$bdcolor = #c9c9c9
$fontcolor = #161414
$bgcolor = #f8f8f9
$hahakicolor = #ab8a60
$errcolor = #D35269
$alpha-hahakicolor = alpha($hahakicolor, .4)
$dark-hahakicolor = darken($hahakicolor, 13)
// $shadow = 0 0 1em #FFF,0 0 1em #FFF,0 0 1em #FFF,0 0 1em #FFF,0 0 1em #FF,0 0 1em #FFF,0 0 1em #FFFF
// $light-shadow = 0 0 1.3em 1em alpha(#fff,.55),0 0 1.3em 1em alpha(#fff,.55),0 0 1.3em 1em alpha(#fff,.55),0 0 1.3em 1em alpha(#fff,.55)

:root
  font: 62.5%/1.7 Verdana, "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, sans-serif

::selection
  background: $alpha-hahakicolor

.ng-hide,
.ng-cloak
  display: none

body
  margin: 0

.hahaki
  background #f8f8f9
  height: 100vh
  box-sizing: border-box
  padding: 4rem
  color: $font-color

.hahaki-wrapper
  font-size: 2.1em

.wrapper
  font-size: 1.5rem
  width: 25rem
  margin-left: calc(27rem + 6.8vw)
  @media screen and (min-width: 920px)
    width: 48rem
  @media screen and (min-width: 1190px)
    margin-left: 35rem
    width: 72rem
  @media screen and (min-width: 1430px)
    width: 96rem

.card-nonrendering
  border: 2px solid #ac8a5d
  display: inline-block;
  padding: .5em
  background: #eee

.card-list
  display flex
  flex-wrap: wrap
  padding-left: 0
  margin: 0
  list-style: none

.card-item
  &
    position: relative
    flex: 0 0 23rem
    border: .1rem solid $bdcolor
    margin-bottom: 1em
    background: #fff
    box-shadow: 0 .2rem .3rem -.2rem $bdcolor
    overflow: hidden
  &.card-disabled
    border-color: $bgcolor
    box-shadow: none
  @media screen and (min-width: 920px)
    margin-right: 1rem
  @media screen and (min-width: 920px) and (max-width: 1189px)
    &:nth-child(even)
      margin-right: 0
  @media screen and (min-width: 1190px) and (max-width: 1429px)
    &:nth-child(3n)
      margin-right: 0
  @media screen and (min-width: 1430px)
    &:nth-child(4n)
      margin-right: 0
  &:not(.card-disabled):hover
    .card-ctrl
      opacity: 1
    .card-ctrl-btn
      &
        top: 0
        opacity: 1
      &:first-child
        transition: .21s cubic-bezier(1, 0.05, 0.38, 0.54) .21s
      &:last-child
        transition: .21s cubic-bezier(1, 0.05, 0.38, 0.54) .34s

.card-img
  width: 100%
  height: 23rem
  background-size: cover

.card-ctrl
  position: absolute
  left: 0
  top: 0
  width: 23rem
  height: 23rem
  box-sizing: border-box
  padding: 8rem 10.25rem
  background: rgba(0,0,0,.4)
  font-size: 1.5em
  opacity: 0
  transition: .21s ease-in

.card-ctrl-btn
  &
    transform: translateZ(0)
    position: relative
    top: 1.6em
    font-size: 1.3em
    color: #fff
    opacity: 0
    transition: 0s linear .56s
    cursor: pointer

.card-form-group
  margin: 1.44em

.card-form-label
  &
    font-size: .8em
  &:after
    content: ":"

.card-form-input
  width: calc(100% - 4rem)
  box-sizing: border-box
  padding: .55em 1em
  border: none
  border-bottom: .1rem solid $bdcolor
  outline: none

.card-form-input.ng-invalid
  border-bottom-color: $errcolor
  background: lighten($errcolor, 20)

.card-form-note
  float: right
  margin-top: 1.3rem
  font-size: .8em
  color: $bdcolor

.sidebar
  position: fixed
  left: 0
  top: 0
  width: 30rem
  height: 100vh
  box-sizing: border-box
  padding: 4em 0
  background: $hahakicolor
  text-align: center

.logo
  &
    width: 5em
    height: 5em
    margin-bottom: 3em
  path
    stroke: $fontcolor

.btn-dl
  &
    width: 71%
    padding: 1.6em 1em
    border: .1rem solid $bgcolor
    background: transparent
    color: $bgcolor
    letter-spacing: .1rem
    cursor: pointer
    outline: none
    transition: background .13s ease-in, color .08s ease-in .13s
  &.btn-disabled
    opacity: .34
    cursor: default
  &:not(.btn-disabled):hover
    color: $hahakicolor
    background: $bgcolor
    transition: background .13s ease-in .08s, color .08s ease-in

.card-undo
  &
    z-index: 1
    position: absolute
    top: 0
    left: 0
    box-sizing: border-box
    padding: 13.5rem 10rem
    background: rgba(255,255,255,.75)
    color: lighten(#000, 40)
    text-align: center
    line-height: 1.2
    cursor: pointer
    transition: .21s ease-in
  &:hover
    color: $fontcolor
.i-triangle-left
  font-size: 2.1em

.full-view-wrapper
  position: fixed
  left: 0
  top: 0
  width: 100vw
  height: 100vh
  background: rgba(0,0,0,.4)

.full-view-group
  position: absolute
  right: 50%
  bottom: 50%
  transform: translate(50%, 50%)

.full-view-img
  max-width: 89vw
  max-height: 89vh

.full-view-close
  position: absolute
  right: -1.6em
  font-size: 1.3em
  color: #fff
  cursor: pointer

.opt-list
  padding-left: 0
  margin-bottom: 3.4rem

.opt-item
  position: relative

.i-file-directory
  &
    position: absolute
    top: .89rem
    left: .89rem
    font-size: 1.5em
  &:after
    content: ""
    display inline-block
    border-width: .55rem 0 .55rem .55rem
    border-style: solid
    border-color: transparent transparent transparent $fontcolor
    position: relative
    left: .55rem
    bottom: .55rem

.opt-foldername
  width: 100%
  box-sizing: border-box
  padding: 1.6em 1em
  border: none
  border-bottom: .1rem solid $bgcolor
  background: $bgcolor
  outline: none
  text-indent: 5rem

.ask
  width: 71%
  margin: 1rem auto
  font-size: .89em
  line-height: 1.2
  text-align: right
  cursor: pointer
  label
    cursor: pointer

.btn-ask
  margin: 0 1rem 0 -1rem
